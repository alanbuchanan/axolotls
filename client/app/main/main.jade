div(ng-include='"components/navbar/navbar.html"')

div.container
  h1 All Pins
  md-grid-list(md-cols-sm='1',
  md-cols-md='1',
  md-cols-gt-md='1',
  md-row-height-gt-md='4:1',
  md-row-height='4:3',
  md-gutter='8px',
  md-gutter-gt-sm='44px')
    md-grid-tile(ng-repeat='pin in pins',
    md-rowspan='1',
    md-colspan='1',
    md-colspan-sm='1')
      img(ng-src='{{pin.url}}')
      md-grid-tile-footer
        h3 {{pin.title}} submitted by&nbsp;
          a(ng-hide="getCurrentUser()._id === pin.ownerId", ng-href="{{pin.ownerId}}") {{pin.ownerUsername}}
          span(ng-show="getCurrentUser()._id === pin.ownerId") you
